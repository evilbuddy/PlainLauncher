<Window x:Class="PlainLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlainLauncher"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="PlainLauncher" Height="450" Width="800" ResizeMode="CanResize">
    <Grid>
        <ListBox Margin="0,0,0,30" MouseDoubleClick="Launch" Name="Files" />
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Height="30"
                Click="OpenSettings">Settings</Button>
    </Grid>
</Window>
